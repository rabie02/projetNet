@model IEnumerable<backend.Models.client>

@{
    ViewBag.Title = "Indexclient";
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    .action-links a {
        margin-right: 10px;
        text-decoration: none;
    }

        .action-links a.btn {
            color: #fff;
            text-decoration: none;
        }

            .action-links a.btn:hover {
                text-decoration: none;
            }

    .btn-edit {
        background-color: #28a745; /* Green color for Edit button */
        border-color: #28a745;
    }

    .btn-details {
        background-color: #007bff; /* Blue color for Details button */
        border-color: #007bff;
    }

    .btn-delete {
        background-color: #dc3545; /* Red color for Delete button */
        border-color: #dc3545;
    }
</style>

<h2>Indexclient</h2>

<p>
    @Html.ActionLink("Create New", "CreateClient", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telephone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telephone)
            </td>
            <td class="action-links">
                @Html.ActionLink("Edit", "EditClient", new { id = item.id }, new { @class = "btn btn-edit" }) |
                @Html.ActionLink("Details", "DetailsClient", new { id = item.id }, new { @class = "btn btn-details" }) |
                @Html.ActionLink("Delete", "DeleteClient", new { id = item.id }, new { @class = "btn btn-delete" })
            </td>
        </tr>
    }

</table>